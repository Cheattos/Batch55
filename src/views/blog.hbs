<html>

<head>
    <title>Creating Blog Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="assests/css/index.css" />
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="assests/images/dumbways.png" style="height: 50px;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link " aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/blog">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/testimonial">Testimonial</a>
                    </li>
                </ul>

                {{#if isLogin}}
                <p>Welcome, {{user.name}}</p>
                <a href="/logout"><button class="btn btn-danger me-2">Loggout</button></a>
                {{else}}
                <a href="/login"><button class="btn btn-danger me-2">Login</button></a>
                <a href="/register"><button class="btn btn-danger me-2">Register</button></a>
                {{/if}}
                
                <a href="/contact"><button class="btn btn-danger" type="submit">Contact Me</button></a>
            </div>
        </div>
    </nav>


    <div class="container d-flex flex-column mt-5">
        <div class="w-100 d-flex justify-content-end mb-3">
            <a href="/add-blog" class="btn btn-danger">Add New Blog</a>
        </div>
        <div>
            {{#each data}}
            <div class="card mb-3 w-100">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="assests/images/blog-img.png" alt="ini blog" class="img-fluid rounded-start">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <h3 class="card-title">
                                <a href="/blog-detail/{{this.id}}" target="_blank">{{this.title}}</a>
                            </h3>
                            <p class="card-text">{{this.id}} | 
                                <span id="time">{{this.createdAt }}</span> | 
                                
                                Kiagus Dewantara</p>
                            <p class="card-text">
                                {{this.content}}
                            </p>
                        </div>
                    </div>
                    <div class="col-md-2 d-flex mt-3" style="height:fit-content;">
                        <a href="/update-blog/{{this.id}}"><button class="btn btn-secondary me-2">Edit Post</button></a>
                        <form method="post" action="/delete-blog/{{this.id}}">
                            <button class="btn btn-danger">Delete1 Post</button>
                        </form>
                            {{!-- <button onclick="window.location.href='/delete-blog/{{@index}}' " class="btn btn-danger">Delete2 Post</button> --}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <script>
        var timeElements = document.querySelectorAll('#time')

        timeElements.forEach(function(timeElements) {
            var origin = timeElements.textContent.trim()
            var date = new Date (origin)
            var option = { weekday: 'long',day : 'numeric', month: 'long', year: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', timeZoneName: 'short'}
            var formateDate = date.toLocaleString('id-ID', option)

            timeElements.textContent = formateDate
        })
    </script>
</body>

</html>